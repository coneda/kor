- content_for :form_errors, error_box(:object => @authority_group)

= form_for @authority_group, :html => { :class => 'kor_form' }, :builder => Stdlib::KorFormBuilder  do |f|
  = f.hidden_field :lock_version
  = f.hidden_field :authority_group_category_id

  = f.kor_input :name, :control => f.text_field(:name)

  = f.kor_submit
