<% if entity.medium.content_type.match(/^video\//) || entity.medium.content_type == 'application/x-shockwave-flash' %>
  <video controls mute autoplay>
    <source src="<%= entity.medium.document.url(:mp4) %>" type="video/mp4">
    <source src="<%= entity.medium.document.url(:webm) %>" type="video/webm">
    <source src="<%= entity.medium.document.url(:ogg) %>" type="video/ogg">
  </video>
<% end %>

<% if entity.medium.content_type.match(/^audio\//) %>
  <audio controls>
    <source src="<%= entity.medium.document.url(:mp3) %>" type="audio/mp3">
    <source src="<%= entity.medium.document.url(:ogg) %>" type="audio/ogg">
  </audio>
<% end %>
