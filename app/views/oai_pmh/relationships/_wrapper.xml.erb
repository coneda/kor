<record>
  <% if record.deleted? %>
    <header status="deleted">
      <identifier><%= record.uuid %></identifier>
      <datestamp><%= timestamp record.deleted_at %></datestamp>
    </header>
  <% else %>
    <header>
      <identifier><%= record.uuid %></identifier>
      <datestamp><%= timestamp record.updated_at %></datestamp>
    </header>
    <metadata>
      <% case params[:metadataPrefix] %>
        <% when "oai_dc" %>
          <%= render partial: "record_oai_dc", locals: {record: record} %>
        <% when "kor" %>
          <%= render partial: "record_kor", locals: {record: record} %>
      <% end %>
    </metadata>
  <% end %>
</record>