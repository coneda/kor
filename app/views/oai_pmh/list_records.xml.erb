<ListRecords>
  <% @records[:items].each do |record| %>
    <%= render partial: 'wrapper', locals: {record: record} %>
  <% end %>

  <% if @records[:token] %>
    <resumptionToken
      expirationDate="<%= timestamp 24.hours.from_now %>"
      completeListSize="<%= @records[:total] %>"
    ><%= @records[:token] %></resumptionToken>
  <% elsif @records[:token] == "" %>
    <resumptionToken completeListSize="<%= @records[:total] %>"/>
  <% end %>
</ListRecords>